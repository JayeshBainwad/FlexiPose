<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginBottom="4dp"
    android:background="#f5f5f5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define a TableRow for each row of data -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="#FFFFFF"
        android:layout_margin="2dp">

        <!-- Column 1: Exercise Name -->
        <TextView
            android:id="@+id/tvExerciseNameRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exercise Name"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"/>

        <!-- Column 2: Min Angle -->
        <TextView
            android:id="@+id/tvMinAngleRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Min Angle"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"/>

        <!-- Column 3: Max Angle -->
        <TextView
            android:id="@+id/tvMaxAngleRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Max Angle"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"/>

        <!-- Column 4: Successful Reps -->
        <TextView
            android:id="@+id/tvRepsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reps"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"/>

        <!-- Column 5: Time -->
        <TextView
            android:id="@+id/tvTimeRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:padding="4dp"
            android:textAlignment="center"/>
    </TableRow>
</TableLayout>